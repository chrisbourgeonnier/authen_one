<!DOCTYPE html>
<html>
  <head>
    <title>PhotoAlbum Auth</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="header">
      <div class="container">
        <%= link_to root_path do %>
          <img src="https://content.codecademy.com/courses/rails-auth/img/fotofoto-logo.svg" width="80" height="80"> Photo Album
        <% end %>

        <div class="nav pull-right">
          <% if current_user %>
            <ul>
              <li><%= current_user.email %></li>
              <li><%= button_to "Log out", logout_path, method: "delete", class: 'btn btn-small' %></li>
            </ul>
          <% else %>
            <ul>
              <li><%= link_to "Login", 'login' %></a></li>
              <li><%= link_to "Signup", 'signup' %></a></li>
            </ul>
          <% end %>


        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
